<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_navigation"
    app:startDestination="@id/productFragment">
    <fragment
        android:id="@+id/productFragment"
        android:name="vn.edu.ntu.quangnghia.btfargment.productFragment"
        android:label="fragment_product"
        tools:layout="@layout/fragment_product" >
        <action
            android:id="@+id/action_productFragment_to_shoppingcartFragment2"
            app:destination="@id/shoppingcartFragment2" />
    </fragment>
    <fragment
        android:id="@+id/shoppingcartFragment2"
        android:name="vn.edu.ntu.quangnghia.btfargment.shoppingcartFragment"
        android:label="fragment_shoppingcart"
        tools:layout="@layout/fragment_shoppingcart" >
        <action
            android:id="@+id/action_shoppingcartFragment2_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
</navigation>